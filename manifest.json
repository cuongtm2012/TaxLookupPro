{
  "manifest_version": 3,
  "name": "Tax ID Lookup",
  "version": "1.0.0",
  "description": "Look up Vietnamese company information using tax IDs - cuongtm2012@gmail.com",
  "permissions": ["storage", "clipboardWrite"],
  "host_permissions": ["https://api.vietqr.io/*"],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Tax ID Lookup. CuongTM",
    "default_icon": {
      "16": "icons/icon16.svg",
      "32": "icons/icon32.svg",
      "48": "icons/icon48.svg",
      "128": "icons/icon128.svg"
    }
  },
  "icons": {
    "16": "icons/icon16.svg",
    "32": "icons/icon32.svg",
    "48": "icons/icon48.svg",
    "128": "icons/icon128.svg"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}
